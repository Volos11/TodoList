<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LiteTracker" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>

        <item name="materialCalendarTheme">@style/Custom.DatePicker</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.LiteTracker" parent="Base.Theme.LiteTracker" />

    <style name="Text.LiteTracker.Gray" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/gray_dark_4</item>
    </style>


    <style name="Text.LiteTracker.Gray.MediumFont" parent="Text.LiteTracker.Gray">
        <item name="fontFamily">@font/exo2medium</item>
    </style>

    <style name="Text.LiteTracker.Gray.LightFont" parent="Text.LiteTracker.Gray">
        <item name="fontFamily">@font/exo2light</item>
    </style>

    <style name="Text.LiteTracker.Gray.BoldFont" parent="Text.LiteTracker.Gray">
        <item name="fontFamily">@font/exo2bold</item>
    </style>

    <style name="Clickable">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Custom.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/exo2medium</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/Custom.BottomNav</item>
    </style>

    <style name="Custom.BottomNav" parent="">
        <item name="colorOnSurfaceVariant">@color/gray_dark_4</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
    </style>

</resources>